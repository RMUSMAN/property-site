@{
    Layout = "~/_AdminLayout.cshtml";
    Page.Title = "view Rent Properties";

         var db = Database.Open("starterSite");
 var profile="Select * FROM RENT ORDER by ID";
var data= db.Query(profile);
var grid = new WebGrid(source: data);
}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title></title>
        <style type="text/css">
  .grid { margin: 4px; border-collapse: collapse; width: 600px; }
  .grid th, .grid td { border: 1px solid #C0C0C0; padding: 5px; text-decoration: none;}
  .head { background-color: #E8E8E8; font-weight: bold; color: #FFF;  }
  .alt { background-color: #E8E8E8; color: #000; }
</style>

    </head>
    <body>


        <div class="w3-display-topmiddle w3-center" style="margin-top: 100px;">
            <div class="container w3-half w3-margin-bottom ">
                <input class="w3-input w3-border w3-card-4 w3-round" placeholder="search User"  >
                </div>
        
      @grid.GetHtml(
    tableStyle: "grid w3-table w3-text-grey w3-small w3-white w3-card-4",
    headerStyle: "head w3-red",
    alternatingRowStyle: "alt w3-stripped w3-hover-shadow",
    columns: grid.Columns(
       grid.Column("NAME"),
        grid.Column("CITY"),
        grid.Column("LOCATION"),
        grid.Column("PRICE"),
        grid.Column("OWNER"),
        grid.Column("KHAALI_ID"),
        grid.Column("EMAIL"),
        grid.Column("CONTACT"),
        grid.Column(format: @<a href="~/DeleteUser?ID= @item.ID"><b><i class="w3-text-red w3-margin-left w3-large  fa fa-trash-o"></i></b></a>)
      )
)
        
        </div>
    </body>
</html>

